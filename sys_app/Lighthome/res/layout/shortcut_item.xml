<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shotcut_item"
    android:layout_width="@dimen/shortcut_item_width"
    android:layout_height="@dimen/shortcut_item_height"
    android:gravity="center" >

    <ImageView
        android:id="@+id/shotcut_icon"
        android:layout_width="@dimen/shortcut_icon_width"
        android:layout_height="@dimen/shortcut_icon_height"
		android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY" >
    </ImageView>

    <TextView
        android:id="@+id/shotcut_lable"
        android:layout_width="@dimen/shortcut_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shotcut_icon"
        android:layout_marginBottom="10dp"
		android:layout_centerHorizontal="true"
		android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/shortcut_text_size" >
    </TextView>

</RelativeLayout>