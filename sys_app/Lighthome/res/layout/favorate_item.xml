<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/favorite_item_width"
    android:layout_height="@dimen/favorite_item_height"
    android:padding="5dp"
    android:id="@+id/favorite_item"
    android:gravity="center" 
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="@dimen/favorite_icon_width"
        android:layout_height="@dimen/favorite_icon_height"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" >
    </ImageView>

    <TextView
        android:id="@+id/favorite_lable"
        android:layout_width="@dimen/favorite_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favorite_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/favorite_text_size"
        android:textColor="@android:color/white">
    </TextView>

</RelativeLayout>