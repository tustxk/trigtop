<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认时的背景图片 -->
    <item android:drawable="@drawable/icon_search_white" android:state_focused="false" android:state_pressed="false"/>
    <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
    <item android:drawable="@drawable/icon_search_blue" android:state_focused="true"/>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/icon_search_blue" android:state_selected="true"/>
    
    <item android:drawable="@drawable/icon_search_blue" android:state_pressed="true"/>

</selector>