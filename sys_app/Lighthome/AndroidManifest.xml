<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netxeon.lignthome"
    android:versionCode="111"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />
	<uses-permission android:name="android.permission.DEVICE_POWER" />
	<uses-permission android:name="android.permission.REBOOT" />

    <device-admin xmlns:android="schemas.android.com/apk/res/android" >
        <uses-policies>
            <force-lock />

            <wipe-data />
        </uses-policies>
    </device-admin>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/category_home"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:debuggable="true"
        android:theme="@style/changebgTheme" >
        <activity
            android:name="com.netxeon.lignthome.ActivityMain"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|smallestScreenSize"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<action android:name="com.netxeon.lignthome.ActivityMain" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
        </activity>
        <activity android:name="com.netxeon.lignthome.AppsActivity" />
        <activity
            android:name="com.netxeon.lignthome.BackgroundSelectorActivity"
            android:theme="@style/BackgroundDialog" />
        <activity
            android:name="com.netxeon.lignthome.DialogActivity"
            android:exported="true"
            android:launchMode="singleInstance"
             android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" 
         >
			<!-- android:theme="@style/Theme.CustomDialog" -->
			 
            <!-- @android:style/Theme.Dialog -->
        </activity>

        <receiver android:name="com.netxeon.lignthome.data.PackageUninstalledReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.netxeon.lignthome.util.KeyReceiver" >
            <intent-filter>
                <action android:name="com.netxeon.lignthome.poweroff" />
            </intent-filter>
        </receiver>
		<receiver android:name="com.netxeon.lignthome.util.AllappReceiver" >
            <intent-filter>
                <action android:name="com.netxeon.lignthome.showapp" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="db_version"
            android:value="3" />
    </application>

</manifest>
